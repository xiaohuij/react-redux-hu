image-full-screen(url, size = contain) {
  background-image: url(url);
  background-size: size;
  background-position: center center;
  background-repeat: no-repeat;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

image-show(url) {
  background-image: url(url);
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-size: contain;
  position: absolute;
  left: 0;
  right: 0;
  top: 3.5rem;
}

image-responsive(width = 100%, offsetY = 50%) {
  position: absolute;
  top: offsetY;
  width: width;
  overflow: hidden;
  left: 50%;
  transform: translate3d(-50%, -(offsetY), 0);
}

translate-center() {
  left: 50%;
  transform: translateX(-50%);
}

translate-center-middle() {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}

overturnIcon() {
  transform: rotateY(180deg);
}
clear-fix() {
  &:before, &:after {
    content: " "; // 1
    display: table; // 2
  }
  &:after {
    clear: both;
  }
}