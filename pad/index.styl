@import '~normalize.css/normalize.css';

html {
  font-size: 10px;
}

body {
  font-family: "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

a {
  text-decoration: none;
}

#app {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: auto;
}